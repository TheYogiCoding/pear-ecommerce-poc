<%- include('../../shared/includes/head', { pageTitle: 'Add New Product'}) %> 
  <link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
<%- include('../../shared/includes/header') %> 
    <main>
        <h1>Product Administration</h1>
        <form action="" method="POST">
            <p>
                <label for="title">Title</label>
                <input type="text" id="title" required>
            </p>
            <p>
                <label for="image">Image File</label>
                <input type="file" id="image" accept="image/png, image/jpg" required>
            </p>
            <p>
                <label for="summary">Summary</label>
                <input type="text" id="summary" required>
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" id="price" min="0.01" step="0.01" required>
            </p>
            <p>
                <label for="description">Description</label>
                <textarea id="description" rows="8" required></textarea>
            </p>
            <p>
                <button class="btn btn-alt" type="reset">Reset</button>
                <button class="btn">Save</button>
            </p>
        </form>
    </main>

<%-include('../../shared/includes/footer') %>
